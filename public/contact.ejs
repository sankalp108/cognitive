<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contacts</title>
  <%- include('./partials/csslinks') %>
</head>

<body>
  <%- include('./partials/header') %>

  <section class="contact-list-section">
    <div class="container">
      <h1 class="main-heading mt-5">Emergency Contacts</h1>
      <% if(contacts.length > 0) { %>
      <table class="table caption-top mt-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email Address</th>
            <th scope="col">Phone Number</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact,index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= contact.firstName %></td>
            <td><%= contact.lastName %></td>
            <td><a href="mailto:<%= contact.email %>"><%= contact.email %></a></td>
            <td><a href="tel:<%= contact.phone %>"><%= contact.phone %></a></td>
            <td>
              <form action="/api/contacts/delete" method="post">
                <input type="hidden" name="id" value="<%= contact.id %>">
                <button type="submit" class="delete-btn">
                  <img src="/assets/images/delete.svg" alt="">
                </button>
              </form>
            </td>
            <!-- <td></td> -->
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
        <div class="empty-items">
          <span class="items-icon"><i class="fa-solid fa-items-xmark"></i></span>
          <h2 class="theme-h2">No Contact Found.</h2>
          <h5 class="theme-p">Please add contacts to see here...</h5>
          <a href="/add-contacts" class="theme-btn">Add Contact</a>
        </div>
      <% } %>
    </div>
  </section>

  <%- include('./partials/footer') %>

  <%- include('./partials/scriptlinks') %>
</body>

</html>